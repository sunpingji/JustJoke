<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/card_margin_hor"
        android:layout_marginRight="@dimen/card_margin_hor"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp">

        <TextView
            android:textSize="16sp"
            android:id="@+id/tv_hot"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/card_text_height"
            android:gravity="center"
            android:text="AAAA" />

        <ImageView
            android:adjustViewBounds="true"
            android:id="@+id/iv_normal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/card_text_height"
            android:src="@color/material_blue_grey_800" />
    </android.support.v7.widget.CardView>
</LinearLayout>